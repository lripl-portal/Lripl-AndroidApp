<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">



    <LinearLayout
        android:id="@+id/sub_category_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_item_type"
            android:src="@mipmap/remote_sub_category"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"/>


        <com.lripl.customviews.views.LRIPLTextView
            android:id="@+id/txt_item_type_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:gravity="center"
            android:textColor="@color/black"
            app:lriplTextViewStyle="T9" />

        <com.lripl.customviews.views.LRIPLTextView
            android:id="@+id/txt_product_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/semi_dark_grey"
            app:lriplTextViewStyle="T20" />


    </LinearLayout>

</android.support.v7.widget.CardView>