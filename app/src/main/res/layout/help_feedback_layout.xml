<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.tests">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingStart="20dp"
    android:background="@color/white"
    android:paddingEnd="20dp">

    <com.lripl.customviews.views.LRIPLTextView
        android:id="@+id/txt_lripl_call_us"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/help_item_background"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:gravity="center_vertical"
        app:lriplTextViewStyle="T3"
        android:drawablePadding="7dp"
        android:drawableEnd="@drawable/phone_icon"
        android:text="@string/txt_lripl_call_us"
        android:textColor="@color/black_trans" />

    <com.lripl.customviews.views.LRIPLTextView
        android:id="@+id/txt_lripl_send_email"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_lripl_call_us"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/help_item_background"
        android:layout_height="50dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        app:lriplTextViewStyle="T3"
        android:drawablePadding="7dp"
        android:drawableEnd="@drawable/email_icon"
        android:text="@string/txt_lripl_send_email"
        android:textColor="@color/black_trans" />


</android.support.constraint.ConstraintLayout>
</layout>