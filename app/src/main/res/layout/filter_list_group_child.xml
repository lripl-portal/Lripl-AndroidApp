<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.lripl.customviews.iconviews.LRIPLIconView
        android:id="@+id/img_filter_item_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="G"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"/>

    <com.lripl.customviews.views.LRIPLTextView
        android:id="@+id/lblListItem"
        app:layout_constraintStart_toStartOf="@+id/img_filter_item_selected"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_marginStart="52dp"
        android:textColor="@color/light_grey"
        app:lriplTextViewStyle="T4" />

</android.support.constraint.ConstraintLayout>