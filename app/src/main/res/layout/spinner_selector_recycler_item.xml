<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selector_data_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selector_background"
    android:focusable="false"
    android:clickable="true"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/selectionImageSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/selector_content"
        android:background="@mipmap/ic_tick"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="24dp" />


    <com.lripl.customviews.views.LRIPLTextView
        android:id="@+id/selector_content"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:maxWidth="220dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="State Name"
        app:lriplTextViewStyle="T4"
        android:textColor="@color/semi_dark_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>