<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/sub_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_type"
                android:src="@mipmap/remote_sub_category"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"/>


           <TextView
                android:id="@+id/txt_item_type_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
                android:gravity="center"
                android:text="Item Type"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/warm_grey"/>

    </LinearLayout>

    <View
        android:id="@+id/frame_left_line"
        android:layout_width="1.5dp"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sub_category_layout"
        android:background="@color/warm_grey"/>

</android.support.constraint.ConstraintLayout>